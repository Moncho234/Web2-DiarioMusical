{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true, // Evita verificar tipos de librerías (útil en proyectos grandes)
    "isolatedModules": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "moduleResolution": "node", // Más estándar que "bundler"
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022"
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": false, // Relajado para simplificar inyección de dependencias
    "strictInputAccessModifiers": false, // Evita errores por modificadores de acceso en inputs
    "strictTemplates": false // Relaja la validación de plantillas
  }
}
